<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to "Пример приложения", root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to "Главная", root_path %></li>
        <li><%= link_to "Помощь", help_path %></li>
        <% if logged_in? %>
          <li><%= link_to "Пользователь", '#' %></li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              Аккаунт <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to "Профиль", current_user %></li>
              <li><%= link_to "Настройки", edit_user_path(current_user) %></li>
              <li class="divider"></li>
              <li>
                <%= link_to "Выйти", logout_path, method: :delete %>
              </li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to "Войти", login_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>